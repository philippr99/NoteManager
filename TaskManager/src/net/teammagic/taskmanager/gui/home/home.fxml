<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="borderPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.teammagic.taskmanager.gui.home.HomeController">
    <top>
        <VBox prefHeight="61.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Close"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <HBox fillHeight="false" prefHeight="38.0" prefWidth="600.0" style=" -fx-border-color:black; -fx-border-width: 0 0 1 0; -fx-border-style: solid;">
                    <children>
                        <Button fx:id="btn_addNote" onAction="#openAddNote_click" prefHeight="24.0" prefWidth="80.0" style="-fx-background-color: #efefef;" text="Add Note" textAlignment="CENTER">
                            <font>
                                <Font name="Nirmala UI Bold" size="13.0"/>
                            </font>
                            <effect>
                                <DropShadow blurType="GAUSSIAN" color="#00000066" offsetX="3.0" offsetY="3.0"/>
                            </effect>
                            <HBox.margin>
                                <Insets left="6.0" top="4.0"/>
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#refresh_click" prefHeight="24.0" prefWidth="80.0" style="-fx-background-color: #efefef;" text="Refresh">
                            <effect>
                                <DropShadow blurType="GAUSSIAN" color="#00000066" offsetX="3.0" offsetY="3.0"/>
                            </effect>
                            <HBox.margin>
                                <Insets left="8.0" top="4.0"/>
                            </HBox.margin>
                            <font>
                                <Font name="Nirmala UI Bold" size="13.0"/>
                            </font>
                        </Button>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btn_logout" onAction="#logout_click" prefHeight="24.0" prefWidth="70.0" style="-fx-background-color: #efefef;" text="Logout" textAlignment="CENTER">
                            <effect>
                                <DropShadow blurType="GAUSSIAN" color="#00000066" offsetX="3.0" offsetY="3.0"/>
                            </effect>
                            <HBox.margin>
                                <Insets left="4.0" right="4.0" top="4.0"/>
                            </HBox.margin>
                            <font>
                                <Font name="Nirmala UI Bold" size="13.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <bottom>
        <TextArea fx:id="txt_content" prefHeight="70.0" prefWidth="600.0" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
